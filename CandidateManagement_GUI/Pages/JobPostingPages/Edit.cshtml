@page
@model CandidateManagement_GUI.Pages.JobPostingPages.EditModel

@{
    ViewData["Title"] = "Edit Job Posting";
}

<div class="job-container">
    <div class="job-header">
        <h2>Edit Job Posting</h2>
        <a asp-page="Index" class="create-button">Back to List</a>
    </div>

    <div class="job-form">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>
            <input type="hidden" asp-for="JobPosting.PostingId" />

            <div class="form-group">
                <label asp-for="JobPosting.JobPostingTitle" class="control-label">Job Title</label>
                <input asp-for="JobPosting.JobPostingTitle" class="form-control" />
                <span asp-validation-for="JobPosting.JobPostingTitle" class="field-validation-error"></span>
            </div>

            <div class="form-group">
                <label asp-for="JobPosting.Description" class="control-label">Description</label>
                <textarea asp-for="JobPosting.Description" class="form-control" rows="4"></textarea>
                <span asp-validation-for="JobPosting.Description" class="field-validation-error"></span>
            </div>

            <div class="form-group">
                <label asp-for="JobPosting.PostedDate" class="control-label">Posted Date</label>
                <input asp-for="JobPosting.PostedDate" class="form-control" type="date" />
                <span asp-validation-for="JobPosting.PostedDate" class="field-validation-error"></span>
            </div>

            <div class="action-buttons">
                <input type="submit" value="Save Changes" class="btn-edit" />
                <a asp-page="./Index" class="btn-delete">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}