@page
@model CandidateManagement_GUI.Pages.JobPostingPages.DeleteModel

@{
    ViewData["Title"] = "Delete Job Posting";
}

<div class="job-container">
    <div class="job-header">
        <h2>Delete Job Posting</h2>
        <a asp-page="Index" class="create-button">Back to List</a>
    </div>

    <div class="delete-container">
        <div class="delete-warning">
            Are you sure you want to delete this job posting?
        </div>

        <div class="details-content">
            <div class="details-row">
                <div class="details-label">@Html.DisplayNameFor(model => model.JobPosting.JobPostingTitle)</div>
                <div class="details-value">@Html.DisplayFor(model => model.JobPosting.JobPostingTitle)</div>
            </div>
            <div class="details-row">
                <div class="details-label">@Html.DisplayNameFor(model => model.JobPosting.Description)</div>
                <div class="details-value">@Html.DisplayFor(model => model.JobPosting.Description)</div>
            </div>
            <div class="details-row">
                <div class="details-label">@Html.DisplayNameFor(model => model.JobPosting.PostedDate)</div>
                <div class="details-value">@Html.DisplayFor(model => model.JobPosting.PostedDate)</div>
            </div>
        </div>

        <form method="post" class="action-buttons">
            <input type="hidden" asp-for="JobPosting.PostingId" />
            <input type="submit" value="Delete" class="btn-delete" />
            <a asp-page="./Index" class="btn-edit">Cancel</a>
        </form>
    </div>
</div>