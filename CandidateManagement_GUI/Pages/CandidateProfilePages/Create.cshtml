@page
@model CandidateManagement_GUI.Pages.CandidateProfilePages.CreateModel

@{
    ViewData["Title"] = "Create Candidate Profile";
}

<div class="candidate-form">
    <h2 class="candidate-name">Create New Candidate Profile</h2>

    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="candidate-info">
            <label asp-for="CandidateProfile.CandidateId">Candidate ID</label>
            <input asp-for="CandidateProfile.CandidateId" class="form-control" />
            <span asp-validation-for="CandidateProfile.CandidateId" class="text-danger"></span>
        </div>

        <div class="candidate-info">
            <label asp-for="CandidateProfile.Fullname">Full Name</label>
            <input asp-for="CandidateProfile.Fullname" class="form-control" />
            <span asp-validation-for="CandidateProfile.Fullname" class="text-danger"></span>
        </div>

        <div class="candidate-info">
            <label asp-for="CandidateProfile.Birthday">Birthday</label>
            <input asp-for="CandidateProfile.Birthday" class="form-control" type="date" />
            <span asp-validation-for="CandidateProfile.Birthday" class="text-danger"></span>
        </div>

        <div class="candidate-info">
            <label asp-for="CandidateProfile.ProfileShortDescription">Profile Description</label>
            <textarea asp-for="CandidateProfile.ProfileShortDescription" class="form-control" rows="3"></textarea>
            <span asp-validation-for="CandidateProfile.ProfileShortDescription" class="text-danger"></span>
        </div>

        <div class="candidate-info">
            <label asp-for="CandidateProfile.ProfileUrl">Profile URL</label>
            <input asp-for="CandidateProfile.ProfileUrl" class="form-control" />
            <span asp-validation-for="CandidateProfile.ProfileUrl" class="text-danger"></span>
        </div>

        <div class="candidate-info">
            <label asp-for="CandidateProfile.PostingId">Job Posting</label>
            <select asp-for="CandidateProfile.PostingId" class="form-control" asp-items="ViewBag.PostingId">
                <option value="">-- Select Job Posting --</option>
            </select>
            <span asp-validation-for="CandidateProfile.PostingId" class="text-danger"></span>
        </div>

        <div class="candidate-actions">
            <input type="submit" value="Create" class="btn-primary" />
            <a asp-page="Index" class="btn-secondary">Back to List</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}